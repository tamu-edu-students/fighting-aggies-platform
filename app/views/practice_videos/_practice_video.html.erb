<div id="<%= dom_id practice_video %>">
  <p>
  <strong>Filename:</strong>
  <%= practice_video.filename %>
  </p>

  <p>
  <strong>Video name:</strong>
  <span id='video_name'>
    <%= practice_video.video_name%>
  </span>
  </p>

  <p>
  <% if practice_video.clip.attached? %>
     <div style="width:400px">
       <%= video_tag(url_for(practice_video.clip), style: 'width:100%;height:auto', controls: '') %>
     </div>
  <% else %>
    No video found.
  <% end %>
  </p>

  <p>
  <strong>Video create date:</strong>
  <% if practice_video.video_create_date %>
    <%= practice_video.video_create_date %>
  <% else %>
    No video creation date data found.
  <% end %>
  </p>

  <p>
  <strong>Description:</strong>
  <%= practice_video.description %>
  </p>

  <p>
  <strong>Video upload date:</strong>
  <% if practice_video.video_upload_date %>
    <%= practice_video.video_upload_date %>
  <% else %>
    No video upload date data found.
  <% end %>
  </p>

</div>
